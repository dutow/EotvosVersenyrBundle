    <script>
      $(document).ready(function(){
      {% block javascripts %}{% endblock %}
      });
    </script>

  <div id="container">
    <header>



    <a href="{{ url("competition_page", { "term": term.getName(), "pageSlug": "root-page" }) }}"  id="logo"></a>
        <div id="login-head">
          {% include 'EotvosVersenyrBundle::user.html.twig' %}
        </div>
        <div id="head-text">
          <span class="name">VersenyR</span><span class="page">{{ block('title') }}</span>
        </div>

    </header>
    <div id="main" role="main">

      <div id="left-side">
        {% include 'EotvosVersenyrBundle::menu.html.twig' %}

        {% if threecol is defined and threecol %}
        <div id="threecol">
          {% block rbody %}{% endblock %}
        </div>
        {% endif %}

        {% if fbbox is defined and fbbox %}
        <div id="fb-root"></div>
        <script>(function(d, s, id) {
          var js, fjs = d.getElementsByTagName(s)[0];
          if (d.getElementById(id)) {return;}
          js = d.createElement(s); js.id = id;
          js.src = "//connect.facebook.net/hu_HU/all.js#xfbml=1";
          fjs.parentNode.insertBefore(js, fjs);
          }(document, 'script', 'facebook-jssdk'));</script>

        <div id="fb-like-box" class="fb-like-box" data-href="https://www.facebook.com/ejtv2011" data-width="238" height="605" data-show-faces="true" data-stream="true" data-header="false" data-border-color="#fff"></div>
        {% endif %}
      </div>
      <div id="right-side">
        <div id="breadcrumb">
          {% block breadcrumb %}
          {% if page is defined %}
          <ul>
            {% for item in page.getParentList() %}
              <li>&nbsp;Â»&nbsp;<a href="{{ item | ecvurl }}">{{ item.title }}</a></li>
            {% endfor %}
          </ul>
          {% endif %}
          {% endblock %}
        </div>

        {% for key, flash in app.session.getFlashes() %}
        <div class="flash flash-{{ key }}">
          {{ flash }}
        </div>
        {% endfor %}

        {% block body %}{% endblock %}
      </div>



    </div>
  </div> <!--! end of #container -->

</body>
